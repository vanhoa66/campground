<% include header%>
<% include menuLeft%>

                <div class="col-sm-9 padding-right">
                    <div class="features_items">
                        <!--features_items-->
                        <h2 class="title text-center">Sản phẩm mới</h2>
                        <% campgrounds.forEach(function(campground){ %>
                            <div class="col-sm-4">
                                <div class="product-image-wrapper">
                                    <div class="single-products">
                                        <div class="productinfo text-center">
                                            <img src="<%=campground.image %>" alt="" />
                                            <h2>$56</h2>
                                            <p>
                                                <%= campground.name %>
                                            </p>
                                            <a href="/campgrounds/<%= campground.id %>" class="btn btn-default add-to-cart">
                                                <i class="fa fa-shopping-cart"></i>More Info</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <% })  %>
                    </div>
                <!--features_items-->

                <div class="category-tab">
                    <!--category-tab-->
                    <div class="col-sm-12">
                        <ul class="nav nav-tabs">
                            <li class="active">
                                <a href="#tshirt" data-toggle="tab">Sản phẩm HOT</a>
                            </li>
                            <li>
                                <a href="#blazers" data-toggle="tab">Sản phẩm bán chạy</a>
                            </li>
                        </ul>
                    </div>
                    <div class="tab-content">
                        <div class="tab-pane fade active in" id="tshirt">
                                <% campgrounds.forEach(function(campground){ %>
                            <div class="col-sm-3">
                                <div class="product-image-wrapper">
                                    <div class="single-products">
                                        <div class="productinfo text-center">
                                            <img src="<%=campground.image %>" alt="" />
                                            <h2>$56</h2>
                                            <p><%= campground.name %></p>
                                            <a href="/campgrounds/<%= campground.id %>" class="btn btn-default add-to-cart">
                                                <i class="fa fa-shopping-cart"></i>More Info</a>
                                        </div>

                                    </div>
                                </div>
                            </div>
                            <% })  %>
                        </div>
                    </div>
                </div>
                <!--/category-tab-->
            </div>
            <% include footer%>
